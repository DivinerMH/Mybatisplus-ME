<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linksame.iot.device.bill.mapper.DeviceInformationVirtualMapper">
    <!-- 通用查询结果集映射 -->
    <resultMap id="BaseResultMap" type="com.linksame.iot.device.bill.entity.DeviceInformationVirtual">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="deviceId" column="device_id" jdbcType="INTEGER"/>
        <result property="machineId" column="machine_id" jdbcType="VARCHAR"/>
        <result property="bimId" column="bim_id" jdbcType="VARCHAR"/>
        <result property="trdNodeColor" column="trd_node_color" jdbcType="VARCHAR"/>
        <result property="locationId" column="location_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="delFlag" column="del_flag" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- DeviceInformationVirtualVO查询结果集映射 -->
    <resultMap id="DeviceInformationVirtualVOResultMap"
               type="com.linksame.iot.device.bill.vo.DeviceInformationVirtualVO">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="deviceId" column="device_id" jdbcType="INTEGER"/>
        <result property="machineId" column="machine_id" jdbcType="VARCHAR"/>
        <result property="bimId" column="bim_id" jdbcType="VARCHAR"/>
        <result property="trdNodeColor" column="trd_node_color" jdbcType="VARCHAR"/>
        <result property="locationId" column="location_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="delFlag" column="del_flag" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 通用查询基本字段 -->
    <sql id="Base_Column_List">id, device_id, machine_id, bim_id, trd_node_color, location_id, status, create_time, update_time, del_flag</sql>


    <!-- 根据id查询虚拟设备台账表详情(多服务) -->
    <select id="queryDeviceInformationVirtualDetail" resultMap="DeviceInformationVirtualVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device_information_virtual
        WHERE del_flag = 0 AND id = #{id}
    </select>

    <!-- 无参查询虚拟设备台账表List -->
    <select id="queryDeviceInformationVirtualList" resultMap="DeviceInformationVirtualVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device_information_virtual
        WHERE del_flag = 0
        ORDER BY create_time DESC
    </select>

    <!-- 条件查询虚拟设备台账表List -->
    <select id="queryByConditions" resultMap="DeviceInformationVirtualVOResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device_information_virtual
        <where>
            del_flag = 0
            <if test="deviceInformationVirtualDTO.name != null and deviceInformationVirtualDTO.name != '' ">
                AND `name` LIKE CONCAT('%', #{deviceInformationVirtualDTO.name},'%')
            </if>
            <if test="deviceInformationVirtualDTO.status != null and deviceInformationVirtualDTO.status != '' ">
                AND status = #{deviceInformationVirtualDTO.status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>
